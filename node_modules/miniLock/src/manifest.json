{
	"name": "miniLock",
	"short_name": "miniLock",
	"description": "File encryption software that does more with less.",
	"version": "0.0.1",
	"author": "Nadim Kobeissi",
	"manifest_version": 2,
	"offline_enabled": true,
	"icons": {
		"16":  "img/icon16.png",
		"32":  "img/icon32.png",
		"48":  "img/icon48.png",
		"128": "img/icon128.png",
		"256": "img/icon256.png",
		"512": "img/icon512.png"
	},
	"app": {
		"background": {
			"scripts": ["background.js"]
		}
	},
	"permissions": [
		"notifications",
		"storage",
		"fileBrowserHandler",
		"fileSystem"
	],
	"file_handlers": {
		"any": {
			"types": [
				"*"
			],
			"extensions": [
				"minilock"
			],
			"title": "miniLock"
		}
	}
}
